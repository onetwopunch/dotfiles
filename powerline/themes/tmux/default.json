{
  "segments": {
    "right": [
      {
        "function": "powerline.segments.common.bat.battery",
        "priority": 50
      },
      {
        "function": "powerline.segments.common.wthr.weather",
        "priority": 50,
        "args": {
          "icons": {
            "day":           "〇",
            "blustery":      "⚑",
            "rainy":         "☔",
            "cloudy":        "☁",
            "snowy":         "❅",
            "stormy":        "☈",
            "foggy":         "≡",
            "sunny":         "☼",
            "night":         "☾",
            "windy":         "☴",
            "not_available": "�",
            "unknown":       "⚠"
          },
          "unit": "F",
                      "location_query": "Seattle, WA"
        }
      },
      {
        "function": "powerline.segments.common.time.date",
        "name": "date",
        "args": {
          "format": "%A, %B %d %Y"
        }
      },
      {
        "function": "powerline.segments.common.time.date",
        "name": "time",
        "args": {
          "format": "%H:%M",
          "istime": true
        }
      },
      {
        "function": "powerline.segments.common.net.external_ip"
      }
    ]
  }
}
